{
  "name": "redux-to-recoil",
  "version": "0.1.0",
  "description": "Access your Redux store through Recoil atoms and selectors",
  "keywords": [
    "redux to recoil",
    "recoil from redux",
    "migrate",
    "migration",
    "sync"
  ],
  "license": "MIT",
  "homepage": "https://github.com/spautz/redux-to-recoil#readme",
  "repository": "https://github.com/spautz/redux-to-recoil",
  "bugs": "https://github.com/spautz/redux-to-recoil/issues",
  "author": "Steven Pautz <spautz@gmail.com>",
  "files": [
    "dist/",
    "src/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "jsnext:main": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "____ LIFECYCLE HOOKS _______________________________________________": "",
    "prepare": "yon run build",
    "prebuild": "yon run build:clean",
    "prerelease": "yon run build:clean",
    "prepublishOnly": "yarn run checkup && yarn run build",
    "pretest": "yon run test:clean",
    "____ INTEGRATION ___________________________________________________": "",
    "dev": "yon run format && yon run types && yon run lint",
    "checkup": "yon run format:checkup && yon run types && yon run lint",
    "clean": "yon run build:clean && yon run test:clean && rimraf dist/ node_modules/.cache/",
    "ci": "yon run clean && yon run checkup && yon run test:report",
    "all": "yon run clean && yon run dev && yon run test && yon run build",
    "____ INDIVIDUAL COMMANDS ___________________________________________": "",
    "build": "microbundle build --jsx React.createElement",
    "build:clean": "rimraf dist/",
    "build:watch": "microbundle watch --jsx React.createElement",
    "format": "prettier --write \"**/*.*\"",
    "format:checkup": "prettier --list-different \"**/*.*\"",
    "lint": "eslint \"**/*.{js,jsx,json,ts,tsx}\"",
    "release:changelog": "standard-version --skip.commit --skip.tag --release-as ",
    "release:tag": "standard-version --commit-all --sign --skip.changelog --release-as ",
    "test": "jest --coverage",
    "test:clean": "rimraf coverage/",
    "test:report": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --coverage --watch",
    "types": "tsc --noEmit --p tsconfig.json"
  },
  "dependencies": {
    "immutable-path": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "3.4.1",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "microbundle": "^0.12.3",
    "prettier": "^2.0.5",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-recoil-hooks-testing-library": "^0.0.7",
    "react-redux": "^7.2.1",
    "react-test-renderer": "16.12.0",
    "recoil": "^0.0.10",
    "redux": "^4.0.5",
    "reselect": "^4.0.0",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.2",
    "ts-jest": "^26.1.3",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7",
    "yarn-or-npm": "^3.0.1"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.0.0",
    "recoil": "^0.0.10",
    "redux": "^4.0.5"
  },
  "lint-staged": {
    "**/*.{css,html,js,jsx,json,less,md,scss,ts,tsx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "yon run format"
    }
  }
}
